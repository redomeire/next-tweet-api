// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL_PRISMA_URL") // uses connection pooling
}

model Tweet {
  id              String     @default(cuid()) @id
  title           String
  description     String
  user            User?     @relation(fields: [userId], references: [id])
  userId          Int
  createdAt       DateTime @default(now()) @map(name: "created_at")
  updatedAt       DateTime @updatedAt @map(name: "updated_at")
  @@map("tweets")
}

model User {
  id            Int       @id   @default(autoincrement())
  email         String      @unique
  password      String
  tweets         Tweet[]
  createdAt     DateTime     @default(now()) @map(name: "created_at")
  updatedAt     DateTime     @updatedAt @map(name: "updated_at")
  @@map(name: "users")
}
